[module/nuvolaplayer]
type = custom/script

exec = nuvolaplayer3ctl track-info | head -3 | awk '{ s = ""; for (i = 2; i <= NF; i++) s = s $i " "; print s }' | tac | awk 'NR%3{printf "%s- ",$0;next;}1' | sed 's/playing -/‚è∏/' | sed 's/paused -/‚èµ/' | sed 's/unknown/reklama :\(/g'
interval = 2

; format = <label>
format-foreground = ${colors.background-alt}

; label = %output:0:30%...
click-left = nuvolaplayer3ctl action toggle-play
click-right = nuvolaplayer3ctl action activate
scroll-up = nuvolaplayer3ctl action prev-song
scroll-down = nuvolaplayer3ctl action next-song



# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      	position top
        # status_command ~/.i3/extended-i3-status/extended_id_status.sh
        # status_command ~/github/R3Status/examples/basic.rb
        status_command py3status -i ~/.i3/py3status.modules/
        font pango:Roboto Sans, FontAwesome 10
        strip_workspace_numbers yes
        separator_symbol "  "
        tray_padding 0
        #height 28
        tray_output VGA1

        colors {
                background $BASE
                statusline $SELECTION
                separator $COMMENT

                #layout colors     border backgorund text
                focused_workspace  $SELECTION $SELECTION $WHITE
                active_workspace   $COMMENT   $COMMENT   $WHITE
                inactive_workspace $BASE   $BASE   $COMMENT
                urgent_workspace   $GREEN $GREEN   $BLACK

        }
}


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
        status_command ~/.i3/extended-i3-status/extended_id_status.sh
        # status_command ~/github/R3Status/examples/basic.rb
        tray_padding 1
        colors {
                background $GRAY
                statusline $WHITE
                separator #222222

                #layout colors     border backgorund text
                focused_workspace  $ORANGE $ORANGE $WHITE
                active_workspace   $GRAY   $GRAY   $ORANGE
                inactive_workspace $GRAY   $GRAY   $WHITE
                urgent_workspace   $GREEN $GREEN   $WHITE
        }
}
